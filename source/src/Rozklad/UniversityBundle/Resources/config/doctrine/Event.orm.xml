<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Rozklad\UniversityBundle\Repository\EventRepository" name="Rozklad\UniversityBundle\Entity\Event">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="date" type="date" column="date"/>
      <many-to-one field="schedule" target-entity="Rozklad\UniversityBundle\Entity\Schedule">
          <join-column name="schedule_id" referenced-column-name="id"/>
      </many-to-one>
      <many-to-one field="auditory" target-entity="Rozklad\UniversityBundle\Entity\Auditory">
          <join-column name="auditory_id" referenced-column-name="id"/>
      </many-to-one>
      <many-to-one field="subject" target-entity="Rozklad\UniversityBundle\Entity\Subject">
          <join-column name="subject_id" referenced-column-name="id"/>
      </many-to-one>
      <many-to-one field="teacher" target-entity="Rozklad\UniversityBundle\Entity\Teacher">
          <join-column name="teacher_id" referenced-column-name="id"/>
      </many-to-one>
      <!--<many-to-many field="group" target-entity="Rozklad\UniversityBundle\Entity\Group">-->
          <!--<join-column name="group_id" referenced-column-name="id"/>-->
      <!--</many-to-many>-->
      <many-to-many field="groups" target-entity="Rozklad\UniversityBundle\Entity\Group">
          <join-table name="event_group">
              <join-columns>
                  <join-column name="user_id" referenced-column-name="id" />
              </join-columns>
              <inverse-join-columns>
                  <join-column name="group_id" referenced-column-name="id" />
              </inverse-join-columns>
          </join-table>
      </many-to-many>
  </entity>
</doctrine-mapping>
