<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Rozklad\UniversityBundle\Repository\TeacherRepository"
            name="Rozklad\UniversityBundle\Entity\Teacher">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="1000"/>
        <many-to-one field="chair" target-entity="Rozklad\UniversityBundle\Entity\Chair">
            <join-column name="chair_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
